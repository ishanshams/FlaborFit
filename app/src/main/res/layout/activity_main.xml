<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ishan.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weight"
            android:id="@+id/imageView1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView1"
            android:contextClickable="false"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textSize="12sp"
            android:paddingLeft="7dp"
            android:textColor="#fff"
            android:paddingBottom="10dp" />

        <TextView
            android:text="10 sets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000" />

        <TextView
            android:text="Weight Lifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="normal|bold"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/yogaBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lotus"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView5"
            android:contextClickable="false"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView6"
            android:textSize="12sp"
            android:paddingLeft="7dp"
            android:textColor="#fff"
            android:paddingBottom="10dp" />

        <TextView
            android:text="1 hour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:padding="5dp" />

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="normal|bold"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/cardioBtn">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="22%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView"
            android:contextClickable="false"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Run like crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11"
            android:textSize="12sp"
            android:paddingLeft="7dp"
            android:textColor="#fff"
            android:paddingBottom="10dp" />

        <TextView
            android:text="5 miles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000" />

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="normal|bold"
            android:layout_above="@+id/textView11"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
